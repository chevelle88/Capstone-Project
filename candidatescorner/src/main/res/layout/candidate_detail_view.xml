<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/candidatePhoto"
            android:layout_width="81dp"
            android:layout_height="127dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/chapterPosition"
            android:layout_width="175dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/candidatePhoto"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/memberName"
            android:layout_width="175dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/chapterPosition"
            app:layout_constraintLeft_toRightOf="@id/candidatePhoto"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="30dp"/>


        <TextView
            android:id="@+id/profileLabel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/candidatePhoto"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="32dp"
            android:text="@string/profile_label" />


        <TextView
            android:id="@+id/scrolledProfile"
            android:layout_width="380dp"
            android:layout_height="160dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLabel"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:maxLines="8"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/ratingLabel"
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrolledProfile"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:text="@string/rating_label"
            />

        <RatingBar
            android:id="@+id/candidateRating"
            android:layout_width="250dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingLabel"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:stepSize="0.5" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/candidatesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@mipmap/ic_candidates"
        app:fabSize="auto">

    </android.support.design.widget.FloatingActionButton>

</android.support.design.widget.CoordinatorLayout>

