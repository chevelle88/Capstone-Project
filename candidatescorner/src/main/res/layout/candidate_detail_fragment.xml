<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/candidatePhoto"
            android:layout_width="81dp"
            android:layout_height="127dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/memberName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/candidatePhoto"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/chapterPosition"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/candidatePhoto"
            app:layout_constraintTop_toBottomOf="@id/memberName"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"/>


        <TextView
            android:id="@+id/profileLabel"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/candidatePhoto"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="28dp"
            android:text="@string/profile_label"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/scrolledProfile"
            android:layout_width="320dp"
            android:layout_height="160dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLabel"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:maxLines="8"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/ratingLabel"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:text="@string/rating_label"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrolledProfile" />

        <RatingBar
            android:id="@+id/candidateRating"
            android:layout_width="250dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingLabel"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:stepSize="0.5" />

    </android.support.constraint.ConstraintLayout>

    <com.example.candidatescorner.details.CandidateDetailsFab
        android:id="@+id/candidatesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@mipmap/ic_candidates"
        android:contentDescription="Select candidate to view"
        />

    <com.gordonwong.materialsheetfab.DimOverlayFrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <io.codetail.widget.RevealLinearLayout
        android:id="@+id/viewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:orientation="vertical">

        <ListView
            android:id="@+id/officeCandidates"
            android:layout_width="260dp"
            android:layout_height="300dp" />

    </io.codetail.widget.RevealLinearLayout>

</android.support.design.widget.CoordinatorLayout>
